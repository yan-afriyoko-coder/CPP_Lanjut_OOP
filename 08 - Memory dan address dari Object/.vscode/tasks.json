{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build c++",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "./src/**.cpp",
                "-o",
                "./bin/Main.out",
            ]
        },
        {
            "label": "run",
            "type":"shell",
            "command":"./bin/Main.out",
            "dependsOn":["build c++"],
            "group": {
                "kind":"build",
                "isDefault":true
            }
        }
    ]
}
